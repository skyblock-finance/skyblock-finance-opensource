{
	"$schema": "https://turbo.build/schema.json",
	"extends": ["//"],
	"pipeline": {
		"download": {
			"dependsOn": ["^build"],
			"inputs": ["scripts/**"],
			"outputMode": "new-only",
			"outputs": ["data"]
		},
		"start": {
			"dependsOn": ["^build", "download"]
		},
		"watch": {
			"cache": false,
			"dependsOn": ["^build", "download"],
			"persistent": true
		}
	}
}
