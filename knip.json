{
	"$schema": "https://unpkg.com/knip@5/schema.json",
	"ignore": ["dist/**"],
	"ignoreBinaries": ["prettier", "publint"],
	"ignoreDependencies": ["@arethetypeswrong/cli"],
	"workspaces": {
		"internals/*": {
			"entry": ["scripts/*.ts", "source/index.ts"],
			"project": ["source/**/*.ts"]
		},
		"internals/scripts": {
			"entry": ["source/*.ts"],
			"project": ["source/**/*.ts"]
		},
		"packages/*": {
			"entry": ["scripts/*.ts", "source/index.ts"],
			"ignore": ["**/*.test.ts"],
			"project": ["source/**/*.ts"]
		}
	}
}
